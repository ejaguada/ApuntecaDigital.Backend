    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: AD Backend API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "args": [],
            "cwd": "${workspaceFolder}\\src\\ApuntecaDigital.Backend.Web",  
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
            },
            "program": "${workspaceFolder}\\src\\ApuntecaDigital.Backend.Web\\bin\\Debug\\net9.0\\ApuntecaDigital.Backend.Web.dll",
        },
        {
            "name": "C#: AD Backend WEB",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web",
            "args": [],
            "cwd": "${workspaceFolder}\\src\\ApuntecaDigital.Backend.Blazor\\ApuntecaDigital.Backend.Blazor",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
            },
            "program": "${workspaceFolder}\\src\\ApuntecaDigital.Backend.Blazor\\ApuntecaDigital.Backend.Blazor\\bin\\Debug\\net9.0\\ApuntecaDigital.Backend.Blazor.dll",
        }
    ],
     "compounds": [
        {
            "name": "Launch API & WebApp",
            "configurations": [
                "C#: AD Backend API",
                "C#: AD Backend WEB"
            ],
            "stopAll": true
        }
    ]
}